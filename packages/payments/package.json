{
  "name": "@prvcsh/payments",
  "version": "0.1.0",
  "description": "Privacy Payments - Merchant API and payment processing for PRVCSH",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./merchant": {
      "types": "./dist/merchant/index.d.ts",
      "import": "./dist/merchant/index.js"
    },
    "./invoices": {
      "types": "./dist/invoices/index.d.ts",
      "import": "./dist/invoices/index.js"
    },
    "./webhooks": {
      "types": "./dist/webhooks/index.d.ts",
      "import": "./dist/webhooks/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.90.0"
  },
  "keywords": [
    "privacy",
    "payments",
    "solana",
    "merchant",
    "crypto",
    "invoices",
    "webhooks"
  ],
  "author": "PRVCSH Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Privacy-Cash/prvcsh.git",
    "directory": "packages/payments"
  },
  "bugs": {
    "url": "https://github.com/Privacy-Cash/prvcsh/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
